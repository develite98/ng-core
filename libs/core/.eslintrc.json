{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["plugin:@eztool/recommended-strict-angular", "plugin:@angular-eslint/template/process-inline-templates"],
      "parserOptions": { "project": ["libs/core/tsconfig.*?.json"] },
      "rules": {
        "@angular-eslint/directive-selector": ["error", { "type": "attribute", "prefix": ["hulk-core", "hulkCore"], "style": "camelCase" }],
        "@angular-eslint/component-selector": ["error", { "type": "element", "prefix": "hulk-core", "style": "kebab-case" }]
      }
    },
    { "files": ["*.html"], "extends": ["plugin:@eztool/recommended-strict-angular-template"], "rules": {} }
  ]
}
